{
  "name": "action-thread",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "workers/*",
    "shared/*"
  ],
  "scripts": {
    "dev": "pnpm -C workers/api dev & pnpm -C apps/web dev",
    "build": "pnpm -C shared/types build && pnpm -C apps/web build && pnpm -C workers/api build",
    "format": "prettier -w ."
  },
  "devDependencies": {
    "prettier": "^3.3.3"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "react-hook-form": "^7.65.0",
    "zod": "^4.1.12"
  }
}
